@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="row">
    <canvas id="myCanvas" width="600" height="400"></canvas>
    <div class="col-md-7">

        <select id="color">
            <option value="black">Black</option>
            <option value="red">Red</option>
            <option value="yellow">Yellow</option>
            <option value="green">Green</option>
            <option value="blue">Blue</option>
        </select>

        <select id="width">
            <option value="1">1</option>
            <option value="3" selected="selected">3</option>
            <option value="5">5</option>
            <option value="7">7</option>
            <option value="9">9</option>
            <option value="11">11</option>
        </select>

        <button onclick="updateTool('erase')">Erase</button>
    </div>
    <div class="col-md-5">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading top-bar">
                            <div class="col-md-8 col-xs-8">
                                <h3 class="panel-title"><span class="glyphicon glyphicon-book"></span> Contacts</h3>
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <tbody id="userList"></tbody>
                        </table>
                    </div>
                </div>

                <div class="col-sm-8">
                    <div class="chatbody">
                        <div class="panel panel-primary">
                            <div class="panel-heading top-bar">
                                <div class="col-md-8 col-xs-8">
                                    <h3 class="panel-title"><span class="glyphicon glyphicon-comment"></span>Chat</h3>
                                </div>
                            </div>
                            <div id="messagesList" class="panel-body msg_container_base">
                            </div>
                            <div class="panel-footer">
                                <div class="input-group">
                                    <input id="messageInput" type="text" class="form-control input-sm chat_input"
                                           placeholder="Write your message here..." />
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary btn-sm" id="sendButton"></i>Send</button>
                                    </span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
